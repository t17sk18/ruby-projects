<br>
 <div class="col-25" style="width:800px; margin:left auto;">
    <div class="container">
        <b><h4>Total Cost: <span class="price" style="color:black"><%= @totalcost%></h4></b></span>
    </div>
</div>
<%# ---- Code reference taken from www.w3schools.com   for application demo purpose -- %>
 <div class="row" style="width:800px; margin:0 auto;">
  <div class="col">
    <div class="container">
      <%= form_tag orders_orders_path, :name => 'form', :method => :get do |form| %>

        <div class="row">
          <div class="col">
            <h3>Billing Address</h3>
            <label for="fname"><i class="fa fa-user"></i> First Name</label>
            <input type="text" id="fname" name="firstname" placeholder="Karthik"><br>
            <label for="fname"><i class="fa fa-user"></i> Last Name </label>&nbsp;
            <input type="text" id="lname" name="lastname" placeholder="Karanam"><br>
            <label for="email"><i class="fa fa-envelope"></i> Email</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" id="email" name="email" placeholder="karthik@tennis.com"><br>
            <label for="email"><i class="fa fa-envelope"></i> Contact</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" id="contact" name="contact" maxlength="16" placeholder="0044-7234321234"><br>
            <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" id="adr" name="address" placeholder="45, Kings Street, Aberdeen, UK, AB248HH"><br>
          </div>

          <br>
          <div class="col">
            <h3>Payment Method</h3>
            <label for="fname">Accepted Cards</label>
            
              <i class="fa fa-cc-visa" style="color:navy;"></i>
              <i class="fa fa-cc-amex" style="color:blue;"></i>
              <i class="fa fa-cc-mastercard" style="color:red;"></i>
              <i class="fa fa-cc-discover" style="color:orange;"></i>
            
            <div>
            <label for="cname">Name on Card</label>
            <input type="text" id="cname" name="cardname" placeholder="Karthik Karanam"><br>
            <label for="ccnum"> Credit Card</label>&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" id="ccnum1" name="num1" maxlength="4" size="2" placeholder="1111">
            <input type="text" id="ccnum2" name="num2" maxlength="4" size="2" placeholder="2222">
            <input type="text" id="ccnum3" name="num3" maxlength="4" size="2" placeholder="3333">
            <input type="text" id="ccnum4" name="num4" maxlength="4" size="2" placeholder="4444"><br>
            <label for="expmonth">Exp Month</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" id="expmonth" name="expmonth" placeholder="December"><br>
            <label for="expyear">Exp Year</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" id="expyear" name="expyear" maxlength="4" size="3"placeholder="2020">
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <label for="cvv">CVV</label>
            <input type="text" id="cvv" name="cvv" maxlength="3" size ="3" placeholder="123"><br>
            </div>
          </div>
          <br>
        </div>
        <label>
          <input type="checkbox" checked="checked" name="sameadr"> Shipping address same as billing
        </label><br>
        <input type="submit" value="Continue to checkout" class="btn" style="width:800px; margin:left auto;">
      <% end %>
    </div>
  </div>
</div> 

<%# ---- Payment method and details are stored in database for demo and project purpose -- %>


